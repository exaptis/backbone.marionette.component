    </div>
    <div class="panel-body">
<pre>
<code class="language-coffeescript">
    class DropdownItemView extends Backbone.Marionette.Component.ItemView

        initialize: ->
            model = new Backbone.Model fruit: '2'

            collection = new Backbone.Collection [
              value: '1', text: 'Orange'
            ,
              value: '2', text: 'Apple'
            ,
              value: '3', text: 'Banana'
            ]

            @add new Dropdown 'fruitChoice', 'fruits', model, collection
</code>
</pre>
